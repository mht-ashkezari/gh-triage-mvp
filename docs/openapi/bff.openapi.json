{
  "openapi": "3.0.2",
  "paths": {
    "/health": {
      "get": {
        "tags": [],
        "parameters": [],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "enum": [
                        true
                      ]
                    },
                    "svc": {
                      "type": "string",
                      "enum": [
                        "bff"
                      ]
                    }
                  },
                  "required": [
                    "ok",
                    "svc"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/repos/{id}/facts/{issue}": {
      "get": {
        "tags": [],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "issue",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "issue_id": {
                      "type": "integer"
                    },
                    "template": {
                      "type": "string",
                      "enum": [
                        "bug",
                        "feature",
                        "question",
                        "other"
                      ]
                    },
                    "has_repro": {
                      "type": "boolean"
                    },
                    "components": {
                      "default": [],
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "body_sha": {
                      "type": "string",
                      "minLength": 64,
                      "maxLength": 64
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": [
                    "issue_id",
                    "body_sha",
                    "created_at"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/repos/{id}/triage": {
      "get": {
        "tags": [],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "issue_id": {
                        "type": "integer"
                      },
                      "suggestions": {
                        "type": "object",
                        "properties": {
                          "labels": {
                            "default": [],
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "name": {
                                  "type": "string"
                                },
                                "score": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 1
                                }
                              },
                              "required": [
                                "name",
                                "score"
                              ]
                            }
                          },
                          "priority": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                          },
                          "assignees": {
                            "default": [],
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "login": {
                                  "type": "string"
                                },
                                "score": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 1
                                }
                              },
                              "required": [
                                "login",
                                "score"
                              ]
                            }
                          },
                          "dup_candidates": {
                            "default": [],
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "number": {
                                  "type": "integer"
                                },
                                "score": {
                                  "type": "number",
                                  "minimum": 0,
                                  "maximum": 1
                                }
                              },
                              "required": [
                                "number",
                                "score"
                              ]
                            }
                          }
                        }
                      },
                      "rationale": {
                        "default": [],
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "evidence_ids": {
                        "default": [],
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": [
                      "issue_id",
                      "suggestions"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/repos/{id}/release/draft": {
      "get": {
        "tags": [],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "maxLength": 200
                          },
                          "link": {
                            "type": "string",
                            "format": "uri"
                          },
                          "group": {
                            "type": "string",
                            "enum": [
                              "feature",
                              "fix",
                              "breaking",
                              "docs",
                              "chore"
                            ]
                          },
                          "thanks_to": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "required": [
                          "title",
                          "link",
                          "group"
                        ]
                      }
                    },
                    "citations": {
                      "default": [],
                      "type": "array",
                      "items": {
                        "type": "string",
                        "format": "uri"
                      }
                    }
                  },
                  "required": [
                    "items"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "info": {
    "title": "BFF API",
    "version": "1.0.0"
  }
}