{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "src/**",
                "tsconfig.json",
                "package.json"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "inputs": [
                "src/**",
                "vitest.config.*",
                "vitest.setup.*",
                "package.json"
            ],
            "outputs": [
                ".coverage/**"
            ],
            "cache": false
        },
        "lint": {
            "inputs": [
                "src/**",
                ".eslintrc.*",
                "package.json"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "build"
            ],
            "inputs": [
                "src/**",
                "tsconfig.*",
                "package.json"
            ],
            "outputs": []
        }
    }
}