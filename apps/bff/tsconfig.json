{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs", // <-- IMPORTANT for NestJS
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true, //
    "emitDecoratorMetadata": true, //
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}