{
    "name": "@ghtriage/runs",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "ts-node src/main.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "test": "vitest run",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test:with-server": "bash -lc 'nohup pnpm dev >/tmp/runs.test.log 2>&1 & echo $! > /tmp/runs.pid; for i in {1..30}; do curl -sf \"http://localhost:${RUNS_PORT:-4101}/health\" && break; sleep 1; done; vitest run; code=$?; kill $(cat /tmp/runs.pid) || true; exit $code'"
    },
    "dependencies": {
        "body-parser": "^1.20.3",
        "bullmq": "^5.10.0",
        "dotenv": "^17.2.3",
        "express": "^4.19.2",
        "ioredis": "^5.4.1",
        "pg": "^8.13.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.6",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}