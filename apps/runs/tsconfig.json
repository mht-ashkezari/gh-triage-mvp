{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2022"
        ],
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "vitest"
        ]
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}