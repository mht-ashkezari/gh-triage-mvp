{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@ghtriage/contracts": [
                "packages/contracts/src/index.ts"
            ],
            "@ghtriage/contracts/*": [
                "packages/contracts/src/*"
            ],
            "@ghtriage/contracts/bff": [
                "packages/contracts/src/bff.contract.ts"
            ],
            "@ghtriage/contracts/runs": [
                "packages/contracts/src/runs.contract.ts"
            ],
            "@ghtriage/contracts/github": [
                "packages/contracts/src/github.ts"
            ]
        },
        "baseUrl": "../../",
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../contracts"
        }
    ]
}