{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "../../",
        "paths": {
            "@ghtriage/schemas": [
                "packages/schemas/src/index.ts"
            ],
            "@ghtriage/schemas/*": [
                "packages/schemas/src/*"
            ]
        }
    },
    "references": [
        {
            "path": "../schemas"
        }
    ],
    "include": [
        "src"
    ]
}