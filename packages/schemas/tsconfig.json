{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "rootDir": "src",
        "outDir": "dist",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ]
}