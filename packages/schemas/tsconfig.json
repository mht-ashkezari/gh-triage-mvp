{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "declaration": true,
        "declarationMap": true,
        "stripInternal": true,
        "rootDir": "src",
        "outDir": "dist",
        "skipLibCheck": true,
        "composite": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo"
    },
    "include": [
        "src"
    ]
}