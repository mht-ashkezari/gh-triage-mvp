{
  "$ref": "#/definitions/KpiSpec",
  "definitions": {
    "KpiSpec": {
      "type": "object",
      "properties": {
        "version": {
          "type": "integer",
          "minimum": 1
        },
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "kpis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string",
                "pattern": "^[a-z0-9_]+$"
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "formula": {
                "type": "string",
                "minLength": 1
              },
              "target": {
                "type": "string",
                "pattern": "^\\s*(>=|<=|==|>|<)\\s*\\d+(\\.\\d+)?\\s*$"
              },
              "source": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "const": "otel_metric"
                      },
                      "metric_name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "labels": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    },
                    "required": [
                      "type",
                      "metric_name"
                    ],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "const": "otel_trace"
                      },
                      "span_name": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "type",
                      "span_name"
                    ],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "const": "sql_query"
                      },
                      "connection": {
                        "type": "string",
                        "minLength": 1
                      },
                      "query": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "type",
                      "connection",
                      "query"
                    ],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "const": "blob_diff"
                      },
                      "bucket": {
                        "type": "string",
                        "minLength": 1
                      },
                      "path_pattern": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "type",
                      "bucket",
                      "path_pattern"
                    ],
                    "additionalProperties": false
                  }
                ]
              },
              "cadence": {
                "type": "string",
                "enum": [
                  "per_run",
                  "daily",
                  "weekly",
                  "monthly"
                ]
              },
              "alerting": {
                "type": "object",
                "properties": {
                  "warn_above": {
                    "type": "number"
                  },
                  "warn_below": {
                    "type": "number"
                  }
                },
                "additionalProperties": false
              }
            },
            "required": [
              "key",
              "name",
              "description",
              "formula",
              "target",
              "source",
              "cadence"
            ],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": [
        "version",
        "owner",
        "kpis"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}